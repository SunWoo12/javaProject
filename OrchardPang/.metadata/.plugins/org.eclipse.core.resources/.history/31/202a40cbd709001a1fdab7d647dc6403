import javax.swing.JLabel;
import java.awt.*;

public class TimerThread extends JLabel implements Runnable{

	Thread myThread;
	int nStart;
	int nSleepTime;
	
	public TimerThread() {
		
	} // constructor
	
	public TimerThread(String arg) {
		super(arg);
		initInstanceDatas();
		
	} // parameter constructor
	
	private void initInstanceDatas() {
	
		myThread = null;
		nStart = 60;
		nSleepTime = 1000;
		
	}
	
	public void setStart(int arg) 		{nStart = arg;}
	public void setSleepTime(int arg) 	{nSleepTime = arg;}
	public int getStart() 				{return nStart;}
	public int getSleepTime() 			{return nSleepTime;}

	public void start() {
		if(myThread == null) myThread = new Thread(this);
		myThread.start();
	}
	
	public void stop() {
		if(myThread != null) myThread.stop();
	}
	@Override
	public void run() {
		// TODO Auto-generated method stub
		for(int i=nStart ; i>=0; i--)
		{
			for(int j=nStart;j>=0;j--)
			{
				setText(Integer.toString(i) + Integer.toString(j));
				try {myThread.sleep(nSleepTime);}
				catch(Exception e) {}
			}
			
		}
		
		
		
	} // run()
	
	

} // TimerThread class
